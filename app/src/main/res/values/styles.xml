<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textColor">@color/FontColor</item>
    </style>

    <style name="EditText" parent="Text.H4">
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">@dimen/margin_horizontal_small</item>
    </style>
    
    <style name="Text.H1">
        <item name="android:textSize">46sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H2">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.H3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H4">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.H5">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H6">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.H7">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.H8">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button" parent="Text.H5"/>

    <style name="Button.Base">
        <item name="android:backgroundTint">@color/c1</item>
        <item name="android:textColor">@color/FontColor.Accent</item>
    </style>

    <style name="Button.Accent">
        <item name="android:backgroundTint">@color/c2</item>
        <item name="android:textColor">@color/FontColor</item>
    </style>
</resources>